# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/pinmyplace
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/pinmyplace
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secret Key (use a long random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# PayMongo API Keys
# Get from: https://dashboard.paymongo.com/developers/api-keys
# Use test keys (sk_test_...) for development
# Use live keys (sk_live_...) for production
PAYMONGO_SECRET_KEY=sk_test_your_secret_key_here
PAYMONGO_PUBLIC_KEY=pk_test_your_public_key_here

# Server Port (optional, defaults to 3000)
PORT=3000

