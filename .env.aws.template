# Application
NODE_ENV=production
PORT=3000

# Database - MongoDB Atlas
# Get from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pinmyplace?retryWrites=true&w=majority

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-to-random-64-char-string

# Stripe Payment (if using)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxx

# Xendit Payment (if using)
# Get from: https://dashboard.xendit.co/settings/developers#api-keys
XENDIT_SECRET_KEY=xnd_xxxxxxxxxxxxxxxxxxxxx

# PayMongo Payment (if using)
# Get from: https://dashboard.paymongo.com/developers/api-keys
PAYMONGO_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxx
PAYMONGO_PUBLIC_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxx

# Trial System (optional)
TRIAL_CODE=ECUADOR2024

# AWS S3 (if using S3 for file uploads - recommended)
